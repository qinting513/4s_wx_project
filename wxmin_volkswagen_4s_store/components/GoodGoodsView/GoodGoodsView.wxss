.home_good_goods_body{
    border: 2rpx solid #f4f4f4;
    margin: 24rpx;
    overflow: hidden;
}
.home_good_goods_body .home_title_more_box .more_box{
    color: #666666;
    font-size: 21rpx;
    padding-right: 22rpx;
}
.home_good_goods_body .detail_box{
    display: flex;
    width: 100%;
    overflow: auto;
    margin-top: 30rpx;
    padding-bottom: 30rpx;
}
.home_good_goods_body .detail_more,
.home_good_goods_body .detail_box .detail_info{
    margin: 0 0 20rpx;
}
.home_good_goods_body .detail_box .detail_{
    width: 175rpx;
    text-align: center;
    margin-right: 35rpx;
}
.home_good_goods_body .detail_box .detail_info .img_{
    width: 175rpx;
    height: 170rpx;
    margin-bottom: 8rpx;
}
.home_good_goods_body .detail_box .detail_ .name{
    font-size: 25rpx;
    color: #333333;
    margin-bottom: 22rpx;
}
.home_good_goods_body .detail_box .detail_ .integral_box{
    color: #567BFF;
    font-size: 29rpx;
    margin-bottom: 18rpx;
}
.home_good_goods_body .detail_box .detail_ .price_box{
    color: #999999;
    font-size: 21rpx;
    text-decoration-line: line-through;
}
.home_good_goods_body .detail_more .img_{
    width: 182rpx;
    border: 1rpx dashed #cccccc;
}
.line_bg{
    width: 24rpx;
    background: transparent;
    color: transparent;
}
.home_title_more_box{   
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 38rpx 24rpx 0;
}
.home_title_more_box .title_name{
    font-size: 36rpx;
    color: #333333;
    font-weight: bold;
}