.good_goods_list_body .header_box{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 2;
    border-bottom: 4rpx solid #F3F3F3;
}
.good_goods_list_body .goods_contnet_detail_box{
    width: 100%;
    height: 100%;
    overflow: auto;
    padding-top: 145rpx;
}
.good_goods_list_body .search_box{
    position: relative;
    width: 100%;
    padding: 5rpx 22rpx;
    overflow: hidden;
    background: white;
}
.good_goods_list_body .search_box input{
    display: inline-block;
    padding: 16rpx 58rpx 17rpx;
    border-radius: 80rpx;
    background: #F3F3F3;
    text-align: center;
    font-size: 26rpx;
    width: calc(100% - 116rpx);
    min-height: 30rpx!important;
	height: 30rpx!important;
	overflow: visible;
}
.good_goods_list_body .search_box .img_ {
    width: 26rpx;
    position: absolute;
    left: 28%;
    top: 50%;
    transform: translateY(-50%);
}
.good_goods_list_body .ad_box .img_{
    width: 100%;
}
.good_goods_list_body .good_goods_list_com_view_body{
    margin: 20rpx auto 37rpx;
}
.good_goods_list_body .header_box .tab_box{
    background: white;
    width: 100%;
    white-space: nowrap;
    font-size: 28rpx;
    overflow: hidden;
}
.good_goods_list_body .header_box .tab_box .detail_{
    padding: 31rpx 33rpx 0 33rpx;
    display: inline-block;
    font-size: 28rpx;
    color: #999999;
}
.good_goods_list_body .header_box .tab_box .detail_ .text_{
    padding: 0 5rpx 9rpx 5rpx;
    white-space:nowrap;
    display: inline-block;
    line-height: 1;
}
.good_goods_list_body .header_box .tab_box .detail_.active_ .text_{
    color: #567BFF;
    border-bottom: 4rpx solid currentColor;
}