.adviser_detail_body{
    background: white;
    width: 100%;
    height: 100%;
}
.adviser_detail_body .header_box .img_{
    width: 100%;
    height: 120rpx;
}
.adviser_detail_body .detail_box{
    margin: 20rpx 100rpx;
    border: 2rpx solid #999999;
    border-radius: 10rpx;
    padding: 40rpx 40rpx 46rpx;
    text-align: center;
}
.adviser_detail_body .detail_box .img_box .img_{
    margin-bottom: 52rpx;
}
.adviser_detail_body .detail_box .img_box .img_{
    width: 164rpx;
    height: 210rpx;
}
.adviser_detail_body .detail_box .welcome_text{
    color: #333333;
    font-size: 36rpx;
    margin-bottom: 56rpx;
    font-weight: bolder;
}
.adviser_detail_body .detail_box .store_name{
    color: #333333;
    font-size: 36rpx;
    margin-bottom: 22rpx;
}
.adviser_detail_body .detail_box .name_join{
    color: #999999;
    font-size: 28rpx;
    margin-bottom: 34rpx;
}
.adviser_detail_body .detail_box .tel_{
    color: #4D83F2;
    font-size: 28rpx;
    margin-bottom: 150rpx;
}
.adviser_detail_body .detail_box .call_{
    color: white;
    background: #56B5FF;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    padding: 20rpx;
    border-radius: 40rpx;
    width: 310rpx;
    margin: auto;
}