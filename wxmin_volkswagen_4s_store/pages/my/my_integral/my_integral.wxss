.my_integral_body .header_box{
    position: relative;
}
.my_integral_body .header_box .img_{
    width: 100%;
}
.my_integral_body .header_box .my_integral_info_box{
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: white;
    padding: 50rpx 32rpx;
}
.my_integral_body .header_box .my_integral_info_box .left_{
    display: flex;
}
.my_integral_body .header_box .my_integral_info_box .left_ .img_{
    width: 100rpx;
    margin-right: 22rpx;
}
.my_integral_body .header_box .my_integral_info_box .left_ .num_{
    font-size: 48rpx;
}
.my_integral_body .header_box .my_integral_info_box .left_ .unit_{
    font-size: 24rpx;
}
.my_integral_body .header_box .my_integral_info_box .left_ .integral_rule{
    font-size: 24rpx;
    margin-top: 10rpx;
    text-decoration: underline;
}
.my_integral_body .header_box .my_integral_info_box .right_{
    font-size: 28rpx;
    padding: 12rpx 25rpx;
    background: #FFCF1A;
    border-radius: 40rpx;
}
.my_integral_body .header_box .integral_log_box .right_{
    font-size: 28rpx;
    padding: 12rpx 25rpx;
    background: #FFCF1A;
    border-radius: 40rpx;
}
.my_integral_body .integral_log_box .pub_tab_box{
    color: #333333;
    padding-top: 40rpx;
    margin-bottom: 10rpx;
}
.my_integral_body .integral_log_box .pub_tab_box .tab_ .text_{
    padding-top: 40rpx; 
}
.my_integral_body .integral_log_box{
    margin-bottom: 10rpx;
}
.my_integral_body .integral_log_box .detail_box{
    height: 480rpx;
    overflow: auto;
    background: white;
}
.my_integral_body .integral_log_box .detail_box .detail_{
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2rpx solid #f4f4f4;
    padding: 30rpx;
}
.my_integral_body .integral_log_box .detail_box .detail_ .left_ .name_{
    font-size: 28rpx;
}
.my_integral_body .integral_log_box .detail_box .detail_ .left_ .time_{
    font-size: 24rpx;
    color: #999999;
    margin-top: 10rpx;
}
.my_integral_body .integral_log_box .detail_box .detail_ .num_{
    font-size: 36rpx;
}
.my_integral_body .integral_log_box .detail_box .detail_ .num_.red_{
    color: #FF0000;
}
.my_integral_body .how_to_get_integral_box{
    background: white;
    margin-bottom: 55rpx;
}
.my_integral_body .how_to_get_integral_box .title_box{
    color: #FF0000;
    font-size: 26rpx;
    padding: 12rpx 34rpx;
    border-bottom: 2rpx solid #f4f4f4;
}
.my_integral_body .how_to_get_integral_box .detail_box{
    padding-left: 32rpx;
}
.my_integral_body .how_to_get_integral_box .detail_box .detail_{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 34rpx 30rpx 34rpx 0;
    border-bottom: 2rpx solid #f4f4f4;
}
.my_integral_body .how_to_get_integral_box .detail_box .left_{
    display: flex;
    align-items: center;
}
.my_integral_body .how_to_get_integral_box .detail_box .detail_ .img_{
    width: 68rpx;
    margin-right: 18rpx;
}
.my_integral_body .how_to_get_integral_box .detail_box .detail_ .title_{
    font-size: 36rpx;
}
.my_integral_body .how_to_get_integral_box .detail_box .detail_ .des_{
    color: #999999;
    font-size: 28rpx;
}
.my_integral_body .how_to_get_integral_box .detail_box .detail_ .num_{
    color: #666666;
    font-size: 36rpx;
}