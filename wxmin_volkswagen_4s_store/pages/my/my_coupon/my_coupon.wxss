.my_coupon_body{
    background: #F3F3F3;
}
.my_coupon_body .pub_tab_box{
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
}
.my_coupon_body .detail_box{
    width: 100%;
    height: 100%;
    overflow: auto;
    padding-top: 128rpx;
}
.my_coupon_body .detail_box .detail_{
    display: flex;
    justify-content: center;
    box-shadow:0px 4rpx 8rpx 0px rgba(22,1,52,0.2);
    border-radius:10rpx;
    height: 200rpx;
    margin: 12rpx 22rpx;
}
.my_coupon_body .detail_box .detail_ .left_{
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 48rpx;
    color: white;
    /* background: #567BFF; */
    text-align: center;
    padding:  5rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius:10rpx 0px 0px 10rpx;
}
.my_coupon_body .detail_box .detail_ .text_{
    font-size: 36rpx;
}
.my_coupon_body .detail_box .detail_ .left_ .unit_,
.my_coupon_body .detail_box .detail_ .left_ .des_{
    font-size: 24rpx;
}
.my_coupon_body .detail_box .detail_ .left_ .des_,
.left_ .title_,
.right_ .name_{
    /* margin-top: 15rpx; */
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.my_coupon_body .detail_box .detail_ .right_{
    background: white;
    padding: 27rpx 25rpx 20rpx 24rpx;
    box-sizing: border-box;
    flex: 1;
    border-radius: 0rpx 10rpx 10rpx 0rpx
}
.my_coupon_body .detail_box .detail_ .right_ .content_{
    color: #999999;
    font-size: 24rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.used_coupon{
    color: #999999 !important;
}
.my_coupon_body .detail_box .detail_ .right_ .label_{
    display: flex;
    justify-content: space-between;
}
.my_coupon_body .detail_box .detail_ .right_ .label_ .title_{
    font-size: 28rpx;
}
.left_ .title_ {
  margin-top: 20rpx;
  font-size: 55rpx;
}
.my_coupon_body .detail_box .detail_ .right_ .label_ .used_btn{
    /* color: #567BFF; */
    font-size: 24rpx;
    width: 120rpx;
    text-align: center;
    padding: 5rpx 5rpx;
    border: 2rpx solid currentColor;
    border-radius: 40rpx;
}
.my_coupon_body .detail_box .detail_.is_disable_use .left_{
    background: #B5B5B5;
    /* color: #666666; */
}
.my_coupon_body .detail_box .detail_.is_disable_use .right_ .label_ .used_btn{
    color: #FEFEFF;
    background: #CBC9CA;
    border: 0;
}
.my_coupon_body .no_more_box{
    text-align: center;
    font-size: 24rpx;
    color: #CBC9CA;
    margin: 10rpx auto 140rpx;
}

.type3 {
    background:linear-gradient(225deg,rgba(255,103,29,1),rgba(255,166,0,1));
}
.left_ .num_ {
  font-size: 85rpx;
}
.type2 {
    background:linear-gradient(225deg, rgba(222,30,45,1),rgba(240,1,93,1)); 
}
.type1 {
   background:linear-gradient(225deg,rgba(0,132,255,1),rgba(86,165,196,1));
}
.right_ .name_ {
  font-size: 34rpx;
  width: 330rpx;
}

.right_ .status_3{
  color: #FF671D;
}
.right_ .status_2{
  color: #FF0756;
}
.right_ .status_1 {
  color: #0289FE;
}
.right_ .expire_ {
  font-size: 26rpx;
  color: #2D2D2E;
  margin-bottom: 10rpx;
}

.is_disable_use .right_ .expire_ {
  color: #6E6E6E;
}
.is_disable_use .right_ .name_{
  color: #B5B5B5;
}