.notice_list_body{
    width: 100%;
}
.notice_list_body .detail_{
    width: 100%;
    background: white;
    position: relative;
}
.notice_list_body .content_box{
    width: 100%;
    padding: 24rpx 22rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
}
.notice_list_body .content_box .img_{
    width: 98rpx;
    height: 98rpx;
    border-radius: 100%;
}
.notice_list_body .content_box .name_detail_box{
    flex: 1;
    max-width: 82%;
    margin-left: 25rpx;
}
.notice_list_body .content_box .name_detail_box .name_time_{
    display: flex;
    justify-content: space-between;
}
.notice_list_body .content_box .name_detail_box .name_time_ .name_{
    font-size: 32rpx;
    font-weight: bold;
}
.notice_list_body .content_box .name_detail_box .detail_info_{
    font-size: 26rpx;
    color: #999999;
    width: 100%;
    margin-top: 12rpx;
}
.notice_list_body .content_box .name_detail_box .name_time_ .time_{
    font-size: 28rpx;
    color: #999999;
}
.inner{
    position: absolute;
    top:0;
    height: 100%;
    right: -140rpx;
    width: 140rpx;
    text-align: center;
}
.inner.txt{
    background-color: #fff;
    width: 100%;
    z-index: 5;
    padding:0 10rpx;
    transition: left 0.2s ease-in-out;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.inner.del{
    background-color: #e64340;
    z-index: 4;
    color: #fff
}
.item-icon{
    width: 64rpx;
    vertical-align: middle;
    margin-right: 16rpx
}
.thumb{
    width: 200px;
    height: 200px;
    -webkit-overflow-scrolling: touch;
    overflow: scroll;
}
.active .del{
    right: 0;
}