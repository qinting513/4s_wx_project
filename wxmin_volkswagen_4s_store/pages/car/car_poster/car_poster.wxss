.car_poster_body{
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #5A5A5A;
}
.car_poster_body .detail_box{
    width: 100%;
    height: 100%;
    padding: 62rpx 92rpx;
}
.car_poster_body .detail_box .car_img_box .img_{
    width: 468rpx;
    height: 347rpx;
}
.car_poster_body .detail_box .er_ma_img_box .img_{
    width: 151rpx;
}
.car_poster_body .img_bg_box{
    position: fixed;
    bottom: 0;
    width: 100%;
    overflow: auto;
    display: flex;
    padding: 27rpx 32rpx 25rpx 32rpx;
    background: white;
}
.car_poster_body .img_bg_box .img_bg_{
    margin-right: 48rpx;
    position: relative;
}
.car_poster_body .img_bg_box .img_bg_:last-child{
    border-right: 32rpx solid transparent;
}
.car_poster_body .img_bg_box .img_{
    width: 100rpx;
    height: 100rpx;
}
.car_poster_body .img_bg_box .sel_img_{
    width: 32rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
}
.car_poster_body .img_bg_box .img_bg_.layer_:before{
    content: '';
    position: absolute;
    display: inline-block;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}
.car_poster_body .option_btn{
    margin-top: 40rpx;
    width: 493rpx;
    padding: 21rpx;
    font-size: 28rpx;
}
.open_set_box{
	position:fixed;
	text-align: center;
	background:white;
	width:600rpx;
	left:50%;
	transform: translateX(-50%);
	top:35%;
	z-index:56;
}
.open_set_box .title_{
	padding:30rpx;
	font-size: 28rpx;
	color: #999999;
	line-height: 1.5;
}
.btn_box{
    display: flex;
}
.btn_box .detail_{
	padding: 30rpx;
	flex: 1;
	text-align: center;
	border-top: 1px solid #F4F4F4;
	border-radius: 0;
}
.btn_box .detail_:nth-child(1){
	border-right: 1px solid #F4F4F4;
}