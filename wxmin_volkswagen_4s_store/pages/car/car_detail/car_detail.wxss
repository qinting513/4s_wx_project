.car_detail_body .car_detail_body_detail{
    padding-bottom: 200rpx;
}
.car_detail_body .car_info_box .car_img_box{
    width: 100%;
    height: 420rpx!important;
}
.car_detail_body .car_info_box .img_box .img_{
    width: 100%;
    height: 100%;
}
.car_detail_body .car_info_box .info_box{
    background: white;
    margin-top: 2rpx;
    padding: 18rpx 24rpx;
}
.car_detail_body .car_info_box .info_box .name_{
    font-size: 32rpx;
    line-height: 1.5;
    margin-bottom: 22rpx;
}
.car_detail_body .car_info_box .info_box .look_num_box .text_{
    font-size: 24rpx;
    color: #999999;
    vertical-align: middle;
}
.car_detail_body .car_info_box .info_box .look_num_box .look_img{
    width: 24rpx;
    margin-right: 10rpx;
}
.car_detail_body .car_detail_box{
    margin-top: 20rpx;
    width: 100%;
    overflow: hidden;
}
.car_detail_body .car_detail_box .title_box{
    background: white;
    padding: 28rpx 22rpx;
    font-size: 32rpx;
}
.car_detail_body .car_detail_box .title_box .text_{
    vertical-align: middle;
    font-weight: bold;
}
.car_detail_body .car_detail_box .title_box .img_{
    width: 8rpx;
    margin-right: 12rpx;
}
.car_detail_body .car_detail_box .car_detail .get_info_{
    background: white;
    padding: 10rpx;
}
.car_detail_body .car_detail_box .car_detail .has_no_more_box{
    text-align: center;
    color: #999999;
    padding: 23rpx;
    font-size: 24rpx;
}
.car_detail_body .car_detail_box .car_detail .has_no_more_box .line_{
    color: #666666;
    margin: auto 20rpx;
}
.bottom_box{
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
}
.bottom_box .has_label_{
    background: white;
    width: 150rpx;
    padding: 20rpx 12rpx 16rpx;
    font-size: 24rpx;
    color: #999999;
    text-align: center;
}
.bottom_box .has_label_ .img_{
    width: 30rpx;
    margin-bottom: 12rpx;
}
.bottom_box .creat_poster{
    border-left: 2rpx solid #f4f4f4; 
    border-right: 2rpx solid #f4f4f4; 
}
.bottom_box .creat_poster .img_{
    width: 34rpx;
}
.bottom_box .call_ser{
    background: #567BFF;
    color: white;
    font-size: 32rpx;
    text-align: center;
    flex: 1;
    padding-top: 34rpx;
}