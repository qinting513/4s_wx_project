.lottery_draw_body{
    width: 100%;
    height: 100%;
    overflow: auto;
    background: #567BFF;
}
.lottery_draw_body .header_box{
    text-align: center;
    position: relative;
    margin: 40rpx auto 30rpx;
}
.lottery_draw_body .header_box .img_{
    width: 686rpx;
}
.lottery_draw_body .header_box .win_list_swiper_box{
    position: absolute;
    height: 50rpx;
    width: 686rpx;
    font-size: 22rpx;
    color: white;
    top: 20rpx;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
}

/* 规则 + 奖励的历史记录 */
.lottery_draw_body .rule_win_log_box  .btn_box{
    display: flex;
    color: white;
    font-size: 32rpx;
    justify-content: space-between;
    padding: 47rpx 35rpx 107rpx;
}
.lottery_draw_body .rule_win_log_box  .btn_box .btn_{
    text-align: center;
    width: 320rpx;
    padding: 21rpx;
    background: linear-gradient(0deg,rgba(255,169,20,1),rgba(249,197,107,1));
    border-radius: 40rpx;
    border-bottom: 5rpx solid #DA8D08;
}
